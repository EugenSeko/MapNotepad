<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="MapNotepad.Controls.SearchBar"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MapNotepad.Controls;assembly=MapNotepad"
    BackgroundColor="White"
    ColumnDefinitions="0.2*,0.6*,0.2*"
    RowDefinitions="0.03*,0.97*">

    <Label
        Grid.Row="0"
        Grid.ColumnSpan="3"
        Background="transparent"
        BackgroundColor="Transparent" />

    <ImageButton
        Grid.Row="1"
        Grid.Column="0"
        BackgroundColor="White"
        BorderColor="White"
        Scale="0.7"
        Source="settings_icon.png" />

    <local:MyEntry
        Grid.Row="1"
        Grid.Column="1"
        BackgroundColor="#F1F3FD"
        HasUnderline="False"
        Placeholder="Search" />

    <ImageButton
        Grid.Row="1"
        Grid.Column="2"
        BackgroundColor="White"
        BorderColor="White"
        BorderWidth="0"
        Scale="0.7"
        Source="exit_icon.png" />

</Grid>