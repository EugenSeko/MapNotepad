<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:MapNotepad.Controls;assembly=MapNotepad"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:maps="clr-namespace:Xamarin.Forms.GoogleMaps;assembly=Xamarin.Forms.GoogleMaps"
             x:Class="MapNotepad.View.AddPinPage">


    <ContentPage.Content>
        <Grid VerticalOptions="Fill" BackgroundColor="White">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" RowDefinitions="0.14*,0.14*,0.14*,0.14*,0.14*,0.14*,0.14*" ColumnDefinitions="0.5*,0.5*">
                <local:Header Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />
                <Label Text="Label" Grid.Row="1" Grid.Column="0" VerticalOptions="End" Grid.ColumnSpan="2"/>
                <local:MyEntry 
                    Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                    BackgroundColor="#F1F3FD"
                    Text="{Binding Label}"/>
                <Label Text="Description" Grid.Row="3" Grid.Column="0" VerticalOptions="End" Grid.ColumnSpan="2"/>
                <local:MyEntry 
                    Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                    BackgroundColor="#F1F3FD"
                    Text="{Binding Description}" />
                <Label Text="Coordinates" Grid.Row="5" Grid.Column="0" VerticalOptions="End" Grid.ColumnSpan="2"/>
                <local:MyEntry Grid.Row="6" Grid.Column="0" 
                        BackgroundColor="#F1F3FD"
                        Text="{Binding Longitude, Mode=TwoWay}"
                        />
                <local:MyEntry Grid.Row="6" Grid.Column="1"
                        BackgroundColor="#F1F3FD" 
                        Text="{Binding Latitude, Mode=TwoWay}"/>
            </Grid>

            <ContentView Grid.Row="1" Content="{Binding Map, Mode=TwoWay}"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>
