<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MapNotepad.View.PinsListPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:local="clr-namespace:MapNotepad.Controls;assembly=MapNotepad"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Pins">
    <ContentPage.Content>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid RowDefinitions="0.07*,0.93*">
              <local:SearchBar Grid.Row="0"/>
              <Grid Grid.Row="1"></Grid>  
            </Grid>
            


            <ImageButton
                Command="{Binding OnAddButtonTap}"
                Margin="0,0,15,15"
                BackgroundColor="#596EFB"
                CornerRadius="90"
                HorizontalOptions="End"
                Scale="1"
                Source="ic_plus.png"
                VerticalOptions="End" />
        </Grid>
    </ContentPage.Content>
</ContentPage>