<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapNotepad.View.LoginAndRegisterPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#FEFEFD">
            <Image Source="pic_enter_page.png"
                   BackgroundColor="#FEFEFD"></Image>
            <Label Text="MapNotepad"
                   BackgroundColor="#FEFEFD"
                   TextColor="#596EFB"
                   FontSize="27"
                   FontFamily="Montserrat"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   ></Label>
            <Button Text="Log in"
                    BackgroundColor="#596EFB"
                    TextColor="#FEFEFD"
                    FontSize="21"
                    FontFamily="Montserrat"
                    FontAttributes="Bold"></Button>
            <Button Text="Create account"
                    BackgroundColor="#FEFEFD"
                    BorderColor="#596EFB"
                    BorderWidth="1"
                    TextColor="#596EFB"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>