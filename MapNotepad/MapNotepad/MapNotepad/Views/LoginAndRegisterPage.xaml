<?xml version="1.0" encoding="utf-8" ?>
<d:BaseContentPage
    x:Class="MapNotepad.Views.LoginAndRegisterPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="clr-namespace:MapNotepad.Views;assembly=MapNotepad"
    <d:BaseContentPage.Content>
        <StackLayout>
            <StackLayout Padding="16,0,16,40" VerticalOptions="EndAndExpand">
                <Image Style="{DynamicResource Logo}" />
                <Label Style="{DynamicResource TextBrend}" />
            </StackLayout>
            <StackLayout Padding="18,0,18,18" VerticalOptions="EndAndExpand">
                <Button Style="{DynamicResource BlueButton}" Text="Log in" />
                <Button
                    Margin="0,14,0,0"
                    Style="{DynamicResource WhiteButton}"
                    Text="Create account" />
            </StackLayout>
        </StackLayout>
    </d:BaseContentPage.Content>
</d:BaseContentPage>

              
